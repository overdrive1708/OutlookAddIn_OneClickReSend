<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <!--メール画面のホームタブにリボンを作成-->
      <tab idMso="TabMail">
        
        <!--返信グループの後ろにワンクリック再送グループを作成-->
        <group id="GroupOneClickReSend"
               insertAfterMso="GroupMailRespond"
               label="ワンクリック再送"
               autoScale="true">
          
          <!--再送ボタン-->
          <button id="ReSendButton"
                  label="再送&#xD;"
                  onAction="OnResendButton"
                  size="large"
                  imageMso="ResendThisMessage"
                  screentip="選択されたメッセージを再送します。(Thunderbird「新しいメッセージとして編集」)添付ファイルは再送できません。" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>

